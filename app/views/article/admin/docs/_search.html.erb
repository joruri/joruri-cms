<%= form_tag '', :method => :get, :class => 'search' do %>

<table>
  <tr>
    <th>記事番号</th>
    <td ><%= text_field_tag 's_id', params[:s_id], :class => 'number', :maxlength => 10, :style => 'width: 80px;' %></td>
    <th>タイトル</th>
    <td ><%= text_field_tag 's_title', params[:s_title], :style => 'width: 350px;' %></td>
    <th>所属</th>
    <td ><%= text_field_tag 's_affiliation_name', params[:s_affiliation_name], :style => 'width: 150px;' %></td>

    <td class="submitters">
      <%= submit_tag '検索',     :name => :search %>
      <%= submit_tag 'リセット', :name => :reset %>
      <span class="separator">|</span>
      <%= submit_tag 'CSV出力', :name => :csv %>
    </td>
  </tr>

</table>
<!-- end .search --><% end %>
<%- if @items.present? -%>
<div class="hit">検索結果 <span class="count"><%= "#{@items.total_entries}" %></span>件</div>
<% end %>
