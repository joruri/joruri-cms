<%= render :partial => 'cms/admin/data/file_nodes/search' %>

<table class="index">
  
  <tr>
    <th style="width: 60px; text-align: center;">詳細</th>
    <th style="width: 25%;">フォルダ名</th>
    <th style="width: ;">説明</th>
    <th style="width: 100px; text-align: right;">ファイル数</th>
    <th style="width: 120px; text-align: center;">更新日時</th>
  </tr>
  
  <% for item in @items %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td style="text-align: center;"><%= link_to :show, {:action => :show, :id => item, :concept => item.concept_id} %></td>
    <td><%= item.name %></td>
    <td><%= item.title %></td>
    <td style="text-align: right;"><%= item.files.size %></td>
    <td style="text-align: center;"><%= item.updated_at.strftime('%Y-%m-%d %H:%M')%></td>
  </tr>
  <% end %>

</table>

<%= paginate @items %>
