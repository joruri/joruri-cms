<%= form_tag '', :method => :get, :class => 'search' do %>

<table>
  <tr>
    <th>ID</th>
    <td ><%= text_field_tag 's_id', params[:s_id], :style => 'width: 80px;' %></td>
    <th>氏名</th>
    <td ><%= text_field_tag 's_name', params[:s_name], :style => 'width: 200px;' %></td>
    <th>E-mail</th>
    <td ><%= text_field_tag 's_email', params[:s_email], :style => 'width: 300px;' %></td>

    <td class="submitters">
      <%= submit_tag '検索',     :name => :search %>
      <%= submit_tag 'リセット', :name => :reset %>
    </td>
  </tr>
  
</table>

