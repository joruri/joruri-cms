<%= render :partial => 'search' %>

<table class="index">
  <tr>
    <th style="width: 60px; text-align: center;">詳細</th>
    <th style="width: 20%;"><%= Cms::Piece.new.locale(:name) %></th>
    <th style="width: ;"><%= Cms::Piece.new.locale(:title) %></th>
    <th style="width: 25%;"><%= Cms::Piece.new.locale(:model) %></th>
    <th style="width: 120px; text-align: center;">更新日時</th>
    <th style="width: 60px; text-align: center;">状態</th>
    <th style="width: 60px; text-align: center;">プレビュー</th>
  </tr>
  
  <% for item in @items %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td style="text-align: center;"><%= link_to :show, item.admin_uri %></td>
    <td><%= item.name %></td>
    <td><%= item.title %><%= " （更新用）" if item.replace_page? %></td>
    <td><%= item.model_name %></td>
    <td style="text-align: center;"><%= item.updated_at.strftime('%Y-%m-%d %H:%M')%></td>
    <td style="text-align: center;"><%= item.status.name %></td>
    <td style="text-align: center;"><%= link_to '表示', cms_piece_path(item.id, :concept => item.concept_id, :do => :preview) %></td>
  </tr>
  <% end %>

</table>

<%= paginate @items %>
