<div class="contentArticleCategory contentArticleCategoryGroup">

<div class="latest">
  <div class="h2">新着情報</div>
  <% if @docs.size > 0 %><div class="docs">
    <% @docs.each do |doc| %>
    <div>・<%=link_to h(doc.title), doc.public_uri%><%= doc.date_and_unit %></div>
    <% end %>
  </div><% end %>
</div>

<%= paginate @docs %>

<% if @docs.size > 0 && (items = @item.public_children).size > 0 %>
<br />
<div class="categories">
  <div class="h3">■小分野別</div>
  <div><% items.each do |c| %><%= link_to "#{c.title}", "../#{c.name}/" %><span>/</span><% end %></div>
</div>
<% end %>

</div>
